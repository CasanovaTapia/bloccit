<p>
  <%= comment.body %>
  <% if comment.user %>
    <small>
      submitted <%= time_ago_in_words(comment.created_at) %> ago
      by <%= comment.user.name || comment.user.email %>
    </small>
  <% end %>
  <% if policy(comment).destroy? %>
    <%= link_to "Delete Comment", [@post, comment], method: :delete %>
  <% end %>
</p>
